<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app
   PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
   "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>

   <!--  General Web Application Description -->
   <display-name>Multiplier Web App</display-name>

   <description>
      This application receives a user-provided number and
      returns the number multiplied by 3
   </description>

   <servlet>
      <servlet-name>multiplier</servlet-name>
      <servlet-class>MyMultiplier</servlet-class>
   </servlet>

   <servlet-mapping>
      <servlet-name>multiplier</servlet-name>
      <url-pattern>/multiply</url-pattern>
   </servlet-mapping>

</web-app>
